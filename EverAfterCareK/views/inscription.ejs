<!DOCTYPE html>
<html lang="fr">

<head>
    <%- include('./partials/head'); %>
        <title>
            <%- titreSite %> - <%- titrePage %>
        </title>
</head>

<header>
    <%- include('./partials/header'); %>
        <link rel="stylesheet" href="connexion.css" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
</header>

<body>
    <section class="main">
        <div class="login-container">
            <p class="title">Inscription</p>
            <div class="separator"></div>

            <form action="/inscription" method="POST">
                <div class="form-control">
                    <p>Bienvenue chez EverAfterCare !</p>
                    <% if (messages) { %>
                        <p>
                            <%= messages.error %>
                        </p>
                        <% } %>
                </div>

                <div class="form-control">
                    <input type="firstname" class="login-input" name="firstname" placeholder="Prénom" id="champ1"
                        onkeyup="verifierChamps()" />
                    <i class="fas fa-user"></i>

                </div>

                <div class="form-control">
                    <input type="lastname" class="login-input" name="lastname" placeholder="Nom" id="champ4"
                        onkeyup="verifierChamps()" />
                    <i class="fas fa-user"></i>

                </div>


                <div class="form-control">
                    <input type="email" name="email" class="login-input" placeholder="Adresse courriel"
                        onkeyup="verifierChamps()" id="champ2" />
                    <i class="fas fa-user"></i>

                </div>


                <div class="form-control">
                    <input type="password" name="password" class="login-input" placeholder="Mot de passe"
                        onkeyup="verifierChamps()" id="champ3" />
                    <i class="fas fa-user"></i>

                </div>
                <div class="form-control">
                    <button class="submit" disabled>S'inscrire</button>
                </div>
            </form>
            <a href="connexion">Vous avez déjà un compte ?</a>

        </div>
    </section>

    <script>
        function verifierChamps() {
            if (champ1.value.length > 0 && champ2.value.length > 0 && champ3.value.length > 0 && champ4.value.length > 0) {
                document.getElementById('button').disabled = false;
            } else {
                document.getElementById('button').disabled = true;
            }
        }
    </script>
</body>

</html>