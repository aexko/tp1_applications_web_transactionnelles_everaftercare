<html lang="fr">

<head>
    <%- include('./partials/head'); %>
</head>

<header>
    <%- include('./partials/header'); %>
</header>

<body>
    <link rel="stylesheet" href="services.css" />
    <div class="service" method="POST">
        <% ListServices.forEach(function(item,index){%>

            <form action="/services" method="POST">
                <p>
                    <%=item.nom %>
                </p>

                <p>
                    <%=item.description %>
                </p>
                <p name="prix_service">
                    <%=item.prix %>
                </p>
                <a href="/rendezvous" id=" buttonrdv ">
                    <input type="button" value="Prendre un RDV" /> </a>
                <button class="submit" id="buttonservices">Prendre un RDV</button>

                <input type="text" name="prix" id="prix" hidden value="<%=item.prix %>" />


                <button submit>Prendre Un RDV</button>
            </form>




    </div>

</body>