<!DOCTYPE html>
<html lang="fr">

<head>
    <%- include('./partials/head'); %>
</head>

<header>
    <%- include('./partials/header'); %>       
    <link rel="stylesheet" href="connexion.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">

</header>

<body>
    <section class="main">
        <div class="login-container">
            <p class="title">Réinitialisation du Mot De Passe</p>

            <div class="separator"></div>
                <form class="login-form"  action="/resetPassword" method="POST">
       
                    <div class="form-control">
                    <input type="email" name="email" placeholder="Adresse courriel" id="champ3" onkeyup="verifierChamps()" /> <br>
       
                    <i class="fas fa-user"></i>
                </div>
                    <div class="form-control">
                         <input type="password" name="password" placeholder="Nouveau Mot De Passe" id="champ2"
            onkeyup="verifierChamps()" /> <br>
            <i class="fas fa-user"></i>
        </div>
        
        
            <div class="form-control">
                <input type="password" name="passwordc" placeholder="Confirmer Nouveau Mot De Passe" id="champ1"
            onkeyup="verifierChamps()" /> <br>
            <i class="fas fa-user"></i>
        </div>
        
            <div class="form-control">
                <button class = "submit" id="button" disabled submit>Mot de passe Oublié</button>
            </div>
    </form>
</div>


</section>
    <script>
        function verifierChamps() {
            if (champ3.value.length > 0 && champ2.value.length > 0 && champ1.value.length > 0) {
                document.getElementById('button').disabled = false;
            } else {
                document.getElementById('button').disabled = true;
            }
        }
    </script>
</body>

</html>

