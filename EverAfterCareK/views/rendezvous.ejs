<!DOCTYPE html>
<html lang="fr">

<head>
    <%- include('./partials/head'); %>
</head>

<header>
    <%- include('./partials/header'); %>
</header>

<body>
    <link rel="stylesheet" href="connexion_prise_rdv.css" />

    <div class="formulaire">
        <h1>
            Prise de rendez-vous</h1>
        <form action="/rendezvous" method="post" class="container1">

            <div class="form-group row">
                <label for="rendezvous">Sélectionnner votre médecin:</label>

                <select id="nom_doc" name="nom_doc">
                    <% ListDocteur.forEach(function(item,index){%>
                    <option value="<%= item.id %>">
                        <%= item.last_name %>
                            <%= item.first_name %>
                    </option>
                    <%}); %>

                </select>
            </div>
            <div class="container2">
                <label for="rendezvous">Quel est l'objet du rendez-vous:</label>
                <select id="type" name="type">
                    <option value="Premier examen">Premier examen</option>
                    <option value="Examen de controle">Examen de controle</option>
                    <option value="Traitement">Traitement (plombage, couronnne,etc)</option>
                    <option value="Opération">Opération</option>
                </select>
            </div>
            <div class="container2">
                <label for="start">Choisissez une date:</label>

                <input type="date" id="start" name="tripstart" value="2022-02-22" max="2030-01-01" min="2022-02-01">
            </div>
            <div class="container2">
                <label for="time">Choisissez l'heure:</label>

                <input type="time" id="time" name="time" value="08:00" min="08:00" max="19:00" step="3600" required>
            </div>
            <input type="submit" name="submit" value="Confirmer" class="btn btn-primary btn-lg">
        </form>
    </div>
</body>