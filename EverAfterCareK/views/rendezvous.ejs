<!DOCTYPE html>
<html lang="fr">

<head>
    <%- include('./partials/head'); %>
</head>

<header>
    <%- include('./partials/header'); %>
</header>

<body>
    <link rel="stylesheet" href="connexion_prise_rdv.css" />


    <div class="formulaire">
        <div class="Choix">

            <form name="pay" action="payment" method="POST">
                <div class="form-group row ">
                    <label for="services">
                        
                            Selection service</label>

                    <select id="type" name="type" size="3">
                <% ListServices.forEach(function(item,index){%>
                <option value="<%=item.id %>">
                    <%=item.nom %>
                    <%=item.prix %>
                        </option>
                        <%}); %>
                            </select>
                </div>


                <div class="form-group row">
                    <label for="rendezvous">Sélectionnner votre médecin:</label>

                    <select id="nom_doc" name="nom_doc">
                    <% ListDocteur.forEach(function(item,index){%>
                        <option value="<%= item.id %>">
                            <%= item.last_name %>
                                <%= item.first_name %>
                        </option>
                        <%}); %>

                </select>
                </div>

                <div class="container2">
                    <label for="start">Choisissez une date:</label>

                    <input type="date" id="start" name="tripstart" value="2022-02-22" max="2030-01-01" min="2022-02-01">
                </div>
                <div class="container2">
                    <label for="time">Choisissez l'heure:</label>

                    <input type="time" id="time" name="time" value="08:00" min="08:00" max="19:00" step="3600" required>
                </div>
                <script src="//checkout.stripe.com/v2/checkout.js" class="stripe-button" data-key="<%= key %>" data-amount="<%= total*100 %>" data-currency="CAD" data-name="Paiement" data-description="EverAfterCare" data-locale="auto">
                </script>
            </form>
        </div>
        <script>
            function masquer_div(id) {
                if (document.getElementById(id).style.display == 'none') {
                    document.getElementById(id).style.display = 'block';
                } else {
                    document.getElementById(id).style.display = 'none';
                }
            }
        </script>
</body>