<%- include ('../partials/header') %>


    <br><br><br>
    <head>
        <link rel="stylesheet" href="confirmation.css">
    </head>
    <form action="http://localhost:4000/rendezvous" method="post" class="col s12">
        <input type="hidden" name="id" value="<%= items[0].id %>">



        <div class="">
            <div class="col s12">
                <% if (items !==undefined && items.length>0) {%>
                    <table class="table">
                        <thead>
                            <tr>
                                <th style="width:1%;text-align:center">Numéro client</th>
                                <th style="width:20%">Prénom</th>
                                <th style="width:20%">Nom de famille</th>
                                <th style="width:39%">Adresse courriel</th>
                                <th solspan="2" style="width:20%;text-align:center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>

                            <% items.forEach(function(item,index){ %>
                                <tr>
                                    <td style="width:1%;text-align:center">
                                        <%= item.id %>
                                    </td>
                                    <td style="width:20%">
                                        <%= item.first_name %>
                                    </td>
                                    <td style="width:20%">
                                        <%= item.last_name %>
                                    </td>
                                    <td style="width:39%">
                                        <%= item.email %>
                                    </td>
                                    <td solspan="2" style="width:20%;text-align:center">
                                        <a href="/account/edit/<%=item.id %>" class="btn btn-success">Modifier </a>
                                        <a href="/account/delete/<%=item.id %>" class="btn btn-danger">Supprimer</a>
                                    </td>
                                </tr>
                                <%}); %>
                        </tbody>
                    </table>
                    <% }else {%>
                        <p><strong>Utilisateur inexistant</strong></p>
                        <% } %>
            </div>
        </div>




        <div class="">
            <div class="col s12">
                <% if (rdv !==undefined && rdv.length>0) {%>
                    <table class="table">
                        <thead>
                            <tr>
                                <th style="width:1%;text-align:center">Numéro client</th>
                                <th style="width:20%">Nom du client</th>
                                <th style="width:20%">Docteur Responsable</th>
                                <th style="width:39%">Type d'examen</th>
                            </tr>
                        </thead>
                        <tbody>

                            <% rdv.forEach(function(rd,index){ %>
                                <tr>
                                    <td style="width:1%;text-align:center">
                                        <%= rd.client_id %>
                                    </td>
                                    <td style="width:20%">
                                        <%= items[0].first_name + " " + items[0].last_name %>
                                    </td>

                                    <td style="width:20%">
                                        <%= rd.first_name + " " + rd.last_name%>
                                    </td>
                                    <td style="width:39%">
                                        <%= rd.type %>
                                    </td>
                                </tr>
                                <%}); %>
                        </tbody>
                    </table>
                    <% }else {%>
                        <p><strong> Aucun rendez-vous </strong></p>
                        <% } %>
                            <input type="submit" name="submit" value="Prendre un Rendez-Vous"
                                class="btn btn-primary btn-lg">
            </div>
        </div>

    </form>

    <%- include ('../partials/footer') %>