<%- include ('../partials/header') %>


    <head>
        <link rel="stylesheet" href="connexion_prise_rdv.css" />
    </head>

    <div class="background">

        <div class="laPage">

            <div class="tabs">
                <span data-tab-value="#tab_1">Clients</span>
                <span data-tab-value="#tab_2">Employés</span>

            </div>

            <div class="tab-content">
                <div class="tabs__tab active" id="tab_1" data-tab-info>

                    <h2>coté client</h2>
                    <div class="row">
                        <form action="http://localhost:4000/connected" method="post" class="col s12">
                            <input type="hidden" name="id" value="">
                            <div class="form-grouprow">
                                <label for="email" class="col-2 col-form-label"> Email </label>
                                <div class="col-10">
                                    <input type="text" name="email" value="" class="form-control">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="password" class="col-2 col-form-label"> Password </label>
                                <div class="col-10">
                                    <input type="text" name="password" value="" class="form-control">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="e_location" class="col-2 col-form-label" style="color:#ffffff"> </label>
                                <div class="col-10">
                                    <input type="submit" name="submit" value="Connexion" class="btn btn-primary btn-lg">
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
                <div class="tabs__tab" id="tab_2" data-tab-info>


                    <h2>coté médecin</h2>
                    <div class="row">
                        <form action="http://localhost:4000/connectedDoctor" method="post" class="col s12">
                            <input type="hidden" name="id" value="">
                            <div class="form-grouproww">
                                <label for="email" class="col-2 col-form-label"> Email </label>
                                <div class="col-10">
                                    <input type="text" name="email" value="" class="form-control">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="password" class="col-2 col-form-label"> Password </label>
                                <div class="col-10">
                                    <input type="text" name="password" value="" class="form-control">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="e_location" class="col-2 col-form-label" style="color:#ffffff"> </label>
                                <div class="col-10">
                                    <input type="submit" name="submit" value="Connexion" class="btn btn-primary btn-lg">
                                </div>
                            </div>
                        </form>
                    </div>


                </div>

            </div>



            <script type="text/javascript">
                const tabs = document.querySelectorAll('[data-tab-value]')
                const tabInfos = document.querySelectorAll('[data-tab-info]')

                tabs.forEach(tab => {
                    tab.addEventListener('click', () => {
                        const target = document
                            .querySelector(tab.dataset.tabValue);

                        tabInfos.forEach(tabInfo => {
                            tabInfo.classList.remove('active')
                        })
                        target.classList.add('active');
                    })
                })
            </script>