<%- include ('../partials/header') %>

	<br>
	<div class="row" style="margin-top:10px;margin-Left:50px;margin-right:50px"></div>
	<form action="http://localhost:4000/event/edit/<%= items[0].id%>" method="post" class="col s12">
		<input type="hidden" name="id" value="<%= items[0].id %>">

		<div class="form-group row">
			<label for="first_name" class="col-2 col-form-label"> First Name </label>
			<div class="col-10">
				<input type="text" name="first_name" value="<%= items[0].first_name %>" class="form-control">
			</div>
		</div>
		<div class="form-group row">
			<label for="last_name" class="col-2 col-form-label"> Name </label>
			<div class="col-10">
				<input type="text" name="last_name" value="<%= items[0].last_name %>" class="form-control">
			</div>
		</div>

		<div class="form-group row">
			<label for="email" class="col-2 col-form-label"> Email </label>
			<div class="col-10">
				<input type="text" name="email" value="<%= items[0].email%>" class="form-control">
			</div>
		</div>

		<div class="form-group row">
			<label for="submit" class="col-2 col-form-label" style="color:#ffffff"> Click
				ici pour submit </label>
			<div class="col-10">
				<input type="submit" name="submit" value="Save modifications" class="btn btn-primary btn-lg">
			</div>
		</div>
	</form>

	<%- include ('../partials/footer') %>